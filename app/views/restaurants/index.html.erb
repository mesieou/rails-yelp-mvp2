<h1 class="my-5">All restaurants</h1>
<div class="border-bottom p-3 my-2">
  <% @restaurants.each do |restaurant| %>
    <div class="w-50 d-flex flex-column border p-3 rounded mb-3">
      <div class="restaurant d-flex justify-content-between">
        <div class="name-category">
          <div>
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
          </div>
          <div>
            <%= restaurant.category %>
        </div>
        </div>
        <div class="address-phone">
          <div>
            🏠 <%= restaurant.address %>
          </div>
          <div>
            📞 <%= restaurant.phone_number %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to '➕ New Restaurant', new_restaurant_path, class: 'text-decoration-none' %>
