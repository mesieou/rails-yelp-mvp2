<div class="row my-5">
  <div class="col-lg-8 col-sm-12">
    <h1> <%= @restaurant.name %></h1>
    <div id="carouselExample" class="carousel slide my-4" data-controller="hello">
      <div class="carousel-inner">
        <div class="carousel-item active">
         <%= image_tag 'Restaurant 2.jpeg', alt: '', class:"d-block w-100 h-50 rounded" %>
        </div>
        <div class="carousel-item">
          <%= image_tag 'Restaurant_Nasinneula.jpg', alt: '', class:"d-block w-100 h-75 rounded" %>
        </div>
        <div class="carousel-item">
          <%= image_tag '794a4fda36a64b7fafd20fbcb5971633.webp', alt: '', class:"d-block w-100 h-75 rounded" %>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <div class="address-phone">
      <p class="m-0"> <strong>Address: </strong> <%= @restaurant.address %></p>
      <p> <strong>Phone: </strong> <%= @restaurant.phone_number %></p>
    </div>
  </div>
  <div class="col-lg-4 col-sm-12">
    <h2 class="my-3">Reviews</h2>
    <div class="border-bottom my-2">
      <% @restaurant.reviews.each do |review| %>
        <p class="mb-0"><%= '⭐️' * review.rating%></p>
        <p><i><%= review.content %></i></p>
      <% end %>
    </div>
    <%= link_to "➕ New Review", new_restaurant_review_path(@restaurant), class: "text-decoration-none"  %>
  </div>
<span class="border-bottom mb-2"></span>
<%= link_to '🏡 Go back Home', restaurants_path, class: "text-decoration-none" %>
</div>
